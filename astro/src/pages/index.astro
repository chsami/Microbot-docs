  "https://images.unsplash.com/photo-1568602471122-7832951cc4c5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1531927557220-a9e23c1e4794?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1541101767792-f9b2b1c4f127?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&&auto=format&fit=facearea&facepad=3&w=300&h=300&q=80",
  "https://images.unsplash.com/photo-1492562080023-ab3db95bfbce?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=facearea&facepad=2&w=300&h=300&q=80",
];
---

<MainLayout>
  <HeroSection
    title=`Unofficial Docs for <span
        class="text-red-500 dark:text-red-400">Microbot client.</span>`
    subTitle="The Best OpenSource OSRS Botting Client."
    primaryBtn="Start Exploring Docs"
    primaryBtnURL="/docs"
    secondaryBtn="Github"
    secondaryBtnURL="https://www.github.com/chsami/microbot"
    withReview={false}
    avatars={avatarSrcs}
    rating=`<span class="font-bold">4.8</span> / 5`
    starCount={4}
    reviews=`From Over <span class="font-bold">12.8k</span> Reviews`
    lottie="/lottie/cover.lottie"
    discord="1087718903985221642"
    alt="Thie is just an example of the docs"
  />

  <ClientsSection
    title="Open Source and Free!"
    subTitle="Experience the reliability and customizable client."
  />

  <FeaturesGeneral
    yt="BXT0pjj3OsU"
    title="Meeting Community Demands"
    subTitle="At Microbot, we understand the unique challenges faced by developers and players alike. From innovative plugins to reliable support, we’re dedicated to enhancing your gameplay and development experience, empowering you to reach new heights."
    alt="Microbot features displayed in a dynamic layout"
    features={features}
  />

  <FeaturesNavs
    title=`Customize <span class="text-red-500 dark:text-red-400">Microbot</span>'s offerings to perfectly suit your automation needs.`
    tabs={[
      {
        heading: "Cutting-Edge Tools",
        content: "Enhance your automation experience with cutting-edge tools and plugins. Empower gameplay and development with innovative solutions that streamline performance and elevate customization.",
        svg: "tools",
        src: feature1,
        alt: "A generic screenshot of the client",
        first: true,
      },
      {
        heading: "Intuitive Dashboards",
        content: "Effortlessly navigate your Microbot setup with intuitive dashboards. Access powerful features and insights through user-friendly interfaces designed for a streamlined and effective experience.",
        svg: "dashboard",
        src: feature2,
        alt: "A screenshot or graphic representation of the future intuitive dashboard",
        second: true,
      },
      {
        heading: "Robust Features",
        content:
          "Reduce complexity and boost performance with Microbot's robust features. Designed to streamline gameplay and enhance customization, these tools empower you to achieve an exceptional in-game experience.",
        svg: "house",
        src: feature3,
        alt: "A screenshot of future features",
      },
    ]}
  />
